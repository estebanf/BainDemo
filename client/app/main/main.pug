.container-fluid
  .rows
    .col-lg-3
      h4.menuTitle
        | Projects
        button.btn.btn-info.pull-right.btn-sm(ng-click='$ctrl.addProject()')
          i.fa.fa-plus-square(aria-hidden='true')
      input.form-control(type='text',ng-model='$ctrl.newFolder',ng-show='$ctrl.showNewFolder')
      ul.nav.nav-pills.nav-stacked.menuList
        li(role='presentation', ng-repeat='project in $ctrl.projects',ng-class="{'active' : project.active}")
          a(ng-click='$ctrl.selectProject(project)')
            | {{ project.name }}
    .col-lg-9
      button.btn.btn-danger.pull-right(ng-click='$ctrl.archive()')
        li.fa.fa-exclamation-circle.fa-fw
        | &nbsp;Archive
      table.table.table-striped.table-hover.table-condensed
        tbody
          thead
            th
              | File
            th
              | Type
            th
              | Last accessed
            th
              | Last modified
            th
              | Doc Type
            th
              | Sensitive
            th
              | Priority
              
          tr(ng-repeat='file in $ctrl.projectFiles')
            td
              | {{ file.fullPath}}
            td
              | {{ file.fileType}}
            td
              | {{ file.lastAccessed}}
            td
              | {{ file.lastModified}}
            td
              | {{ file.docType}}
            td
              i.fa.fa-thumbs-o-up.fa-2x(ng-if='!file.sensitive')
              i.fa.fa-eye.fa-2x(ng-if='file.sensitive',tooltip-placement="top", uib-tooltip=" {{ file.NE_SSN.join('\n') }}")
            td
              a(ng-click='$ctrl.toogleKeep(file)')
                i.fa.fa-plus-circle.fa-2x(ng-if="file.keep")
                i.fa.fa-minus-circle.fa-2x(ng-if="!file.keep")

              
